<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taller2.fiuba.cliente.activity.ProfileSettingsActivity"
    android:background="#cf000000">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profilePicture"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />
    <EditText
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_toRightOf="@id/profilePicture"
        android:textColor="#aaaaaa"
        android:text ="username"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/filenamebutton"
        android:text = "Search"
        android:onClick="Search"
        android:layout_alignBaseline="@+id/profilePicture"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nametextview"
        android:textColor="#aaaaaa"
        android:layout_below="@+id/profilePicture"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/nametextview"
        android:textColor="#aaaaaa"/>
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailtextview"
        android:layout_below="@id/nametextview"
        android:text = "Email"
        android:textColor="#aaaaaa"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_alignParentRight="true"
        android:textColor="#aaaaaa"
        android:layout_alignBaseline="@+id/emailtextview"/>
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationtextview"
        android:layout_below="@id/emailtextview"
        android:text = "Last known location"
        android:textColor="#aaaaaa"/>
    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_alignBaseline="@id/locationtextview"
        android:layout_alignParentRight="true"
        android:textColor="#aaaaaa"/>


</RelativeLayout>